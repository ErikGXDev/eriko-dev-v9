---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>

    <meta name="title" content="ErikGXDev" />
    <meta
      name="description"
      content="I'm a fullstack developer who creates websites and apps using Javascript Frameworks."
    />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://eriko.dev/" />
    <meta property="og:title" content="Hi, I'm ErikGXDev - eriko.dev" />
    <meta
      property="og:description"
      content="I'm a fullstack developer who creates websites and apps using Javascript Frameworks."
    />
    <meta property="og:image" content="https://eriko.dev/seo.png" />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content="https://eriko.dev/" />
    <meta property="twitter:title" content="Hi, I'm ErikGXDev - eriko.dev" />
    <meta
      property="twitter:description"
      content="I'm a fullstack developer who creates websites and apps using Javascript Frameworks."
    />
    <meta property="twitter:image" content="https://eriko.dev/seo.png" />
  </head>
  <body
    class="bg-neutral-900 flex justify-center font-stack text-white min-h-screen"
  >
    <main class="max-w-4xl w-full mt-8 mb-16 px-2">
      <slot />
    </main>
  </body>
</html>

<style>
  @import url("https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap");
</style>
